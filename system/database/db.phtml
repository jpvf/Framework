    private static $instance; 
    
    function __construct($db = null)
    {
        self::$instance = $this;

        $db = (is_null($db)) ? config::getInstance()->load('db')->get_group('config') : $db;  

        foreach ($db as $key => $val)
        {
            $this->$key = $val;            
        }

        $this->_connect();
    }  
    
    
    function __destruct()
    {
        $this->_close();
    }     
    
    public static function getInstance() 
    { 
